{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "rootDir": "crgpt",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts"],
  "exclude": ["./node_modules", "./dist", "crgpt/**/*.test.ts"],
  "engines": {
    "node": ">=18"
  }
}
